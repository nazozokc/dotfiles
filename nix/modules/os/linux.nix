{ pkgs, lib, ... }:

{
  ########################################
  # Linux 専用パッケージ
  ########################################

  home.packages = with pkgs; [
    xclip          # クリップボード
    wl-clipboard   # Wayland用
    xdg-utils
  ];

  ########################################
  # Linux専用セッション変数
  ########################################

  home.sessionVariables = {
    EDITOR = "nvim";
    BROWSER = "zen-browser";
  };

  ########################################
  # Linux専用設定
  ########################################

  xdg.enable = true;

  ########################################
  # フォント（Linuxのみで有効）
  ########################################

  fonts.fontconfig.enable = true;
}

