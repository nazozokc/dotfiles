{
  "$schema": "https://opencode.ai/config.json",
  "model": "zen/codex",
  "small_model": "zen/codex-mini",
  "autoupdate": true,
  "instructions": [
    "~/.config/opencode/INSTRUCTIONS.md",
    "AGENTS.md"
  ],
  "permission": {
    "read": {
      "*": "allow",
      "*.env": "deny",
      "*.env.*": "deny"
    },
    "edit": {
      "*": "allow"
    },
    "bash": {
      "*": "ask"
    },
    "external_directory": {
      "*": "deny",
      "/tmp/**": "allow"
    }
  },
  "watcher": {
    "ignore": [
      "result/**",
      ".git/**",
      "node_modules/**"
    ]
  }
}
